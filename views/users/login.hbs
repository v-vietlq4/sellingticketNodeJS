<div class="container">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-1">
			<div class="login-form">
				<!--login form-->
				<h2>Login to your account</h2>
				<form action="/login" method="POST" id="login">
					<input name="username" type="text" id="loginuser" placeholder="User Name" name="loginuser" />
					<span class="error" id="errorloginuser">test</span>
					<input name="password" type="password" id="loginpass" placeholder="Password" name="loginpass" />
					<span class="error" id="errorloginpass">test</span>
					<div id="recaptcha" class="g-recaptcha" data-sitekey="6Lf7DcwUAAAAAHcHyUBRA2TBZwnoxl9AUYpPCWsS"
						data-callback="verifyCaptcha"></div>
					<p><a href=""> Forgot your password?</a></p>
					<button type="submit" class="btn btn-default" id="submitlogin">Login</button>
					<br>
					<br>
				</form>
			</div>
			<!--/login form-->
		</div>
		<div class="col-sm-1">
			<h2 class="or">OR</h2>
		</div>
		<div class="col-sm-4">
			<div class="signup-button">
				<!--sign up form-->
				<h2>You does not have an account?</h2>
				<p><a href="/register">Sign Up Now</a></p>
			</div>
			<!--/sign up form-->
		</div>
	</div>
</div>
{{/section}}

